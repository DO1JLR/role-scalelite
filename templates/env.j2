RAILS_ENV={{ scalelite.rails_env }}
RAILS_LOG_TO_STDOUT=1
DISABLE_SPRING=1
BIND=tcp://127.0.0.1:3000
DATABASE_URL=postgres://{{ scalelite.psql_user }}:{{ scalelite.psql_pwd }}@{{ scalelite.psql_server }}
REDIS_URL=redis://{{ scalelite.redis_server }}
SECRET_KEY_BASE={{ ansible_local['scalelite']['secrets']['secret_key_base'] | string }}
LOADBALANCER_SECRET={{ ansible_local['scalelite']['secrets']['loadbalancer_secret'] | string }}
